<div>

  <h2>New Employee</h2>
  <%= form_for @employee do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>  
    <div>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div> 
    <div>
      <%= f.label :hiredate %>
      <%= f.date_field :hiredate %>
    </div> 
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div> 
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div> 