<h3>Edit User Details</h3>
<section class="form-group">
  <div class="reg-form">
    <h4>Personal Information</h4>
    <section class="form-group">
      <%= form_for(current_user, html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-group">
          <div class="row">
            <div class="col-md-4">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control", disabled: true %>
            </div>
            <div class="col-md-4">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :hiredate %>
              <%= f.date_field :hiredate, class: "form-control", disabled: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= f.label :phone %>
              <%= f.text_field :phone, class: "form-control" %>
            </div>
            <div class="col-md-4">
              <%= f.label :password %>
              <%= link_to "Change Password", '#', class: "btn btn-default btn-warning" %>
            </div>
          </div>
        </div>
        <footer>
          <%= f.submit "Update", class: "btn btn-default btn-success" %>
          <%= link_to "Cancel", root_url, class: "btn btn-default" %>
        </footer>
      <% end %>
    </section>
  </div>
</div>