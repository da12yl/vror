<div class="tip-actions">
  <!-- Add -->
  <%= form_for([@user, @tip]) do |f| %>
    <div class="fields">
      <%= f.date_field :day, class: "form-control" %>
      <%= f.text_field :amount, class: "form-control", placeholder: "Amount", maxlength: "3", required: true %>
      <%= f.button class: "btn btn-default btn-success btn-sm" do %>
        <span class="glyphicon glyphicon-plus"></span> Add Tip Record
      <% end %>
    </div>
    <div class="btn-group-sm">
      <button type="button" class="btn btn-default btn-info dropdown-toggle" data-toggle="dropdown">
        Export <span class="caret"></span>
      </button>

      <ul class="dropdown-menu" role="menu">
        <li><%= link_to "Week", export_user_tips_path('week') %></li>
        <li><%= link_to "Month", export_user_tips_path('month') %></li>
        <li><%= link_to "Year", export_user_tips_path('year') %></li>
        <li><%= link_to "All", export_user_tips_path('all') %></li>
        <li class="divider"></li>
        <li><a href="#">Export for Tip Report</a></li>
      </ul>
    </div>
  <% end %>
</div>