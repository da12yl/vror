<div class="reg-form singup">
  <header>
    <h2>Add New Employee</h2>
  </header>

  <section class="form-group">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, :autofocus => true, class: "form-control" %>
      </div>

      <div class="input-group">
        <%= f.label :hire_date %><br />
        <%= f.date_field :hire_date, class: "form-control" %>
      </div>

      <div class="input-group row">
        <div class="col-md-8">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control", placeholder: "email@example.com" %>
        </div>
        <div class="col-md-4">
          <%= f.label :phone %>
          <%= f.text_field :phone, class: "form-control" %>
        </div>
      </div>

      <div class="input-group">
        <div class="row">
          <div class="col-md-6">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="col-md-6">
            <%= f.label "Retype Pass" %><br />
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="input-group"><%= f.submit "Sign up" %></div>
    <% end %>
  </section>

  <footer>
    <%= link_to "Forgot Password...", new_user_password_path %>
  </footer>
</div>